@using MashinAl.Business.Modules.PlateModule.Queries.PlateComplexFilterQuery
@model IEnumerable<PlateComplexFilterDto>

@foreach (var item in Model.Where(m => m.IsAccepted == true))
{
        <div class="license-plate-card">
            <a asp-controller="Plate" asp-action="Details" asp-route-id="@item.Id">
            <div class="license-plate">
                <div class="mark-icon">
                    <img src="~/frontside/assets/img/icons/registrationMarks_icons.svg"
                         alt="" />
                </div>
                <span class="license-plate-number"> @item.RegionTitle-@item.FirstLetter@item.SecondLetter-@item.PlateNumber </span>
            </div>
            </a>
            <div class="license-plate-body">
                <div class="license-body-header">
                    <span class="license-plate-price">@item.Price.ToString("G29") AZN</span>
                    <span class="license-add-to-favorites">
                        <a href="#"><i class="fa-regular fa-bookmark"></i></a>
                    </span>
                </div>
                <span class="license-plate-owner">@item.Name</span>
                <div class="license-plate-bottom">
                    <span class="license-date license-icons">
                        <i class="fa-regular fa-calendar"></i> @(item.PublishedAt?.ToString("dd MMMM", new System.Globalization.CultureInfo("az-Latn-AZ")) ?? "")
                    </span>
                    <span class="license-location license-icons">
                        <i class="fa-solid fa-location-dot"></i> @item.CityName
                    </span>
                </div>
            </div>
        </div>
}