@using MashinAl.Business.Modules.AccountModule.Commands.UserAddBalanceCommand
@model UserAddBalanceRequest

@{
    ViewData["Title"] = "Balans Artımı  | Mashin.Al";
}

<div class="container">
    <div class="container-2">

        <div class="card-container-2">

            <div class="front">
                <div class="image">

                    <img src="" alt="" class="visa-image">
                </div>
                <div class="card-number-box">KARTIN 16 RƏQƏMİ</div>
                <div class="flexbox">
                    <div class="box">
                        <span>KART SAHİBİ</span>
                        <div class="card-holder-name">AD SOYAD</div>
                    </div>
                    <div class="box">
                        <span>SON TARİX</span>
                        <div class="expiration">
                            <span class="exp-month">AY</span>
                            <span class="exp-year">İL</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="back">
                <div class="stripe"></div>
                <div class="box">
                    <span>cvv</span>
                    <div class="cvv-box"></div>
                    <img src="~/frontside/assets/img/icons/visa.png" alt="">
                </div>
            </div>

        </div>

        <form method="post">
            <div class="inputBox">
                <span>KARTIN 16 RƏQƏMİ</span>
                <input type="text" maxlength="16" class="card-number-input">
            </div>
            <div class="inputBox">
                <span>KART SAHİBİ</span>
                <input type="text" class="card-holder-input">
            </div>
            <div class="flexbox">
                <div class="inputBox">
                    <span>SON TARİX</span>
                    <select name="" id="" class="month-input">
                        <option value="month" selected disabled>AY</option>
                        <option value="01">01</option>
                        <option value="02">02</option>
                        <option value="03">03</option>
                        <option value="04">04</option>
                        <option value="05">05</option>
                        <option value="06">06</option>
                        <option value="07">07</option>
                        <option value="08">08</option>
                        <option value="09">09</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select>
                </div>
                <div class="inputBox">
                    <span>İL</span>
                    <select name="" id="" class="year-input">
                        <option value="year" selected disabled>İL</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                        <option value="2025">2025</option>
                        <option value="2026">2026</option>
                        <option value="2027">2027</option>
                        <option value="2028">2028</option>
                        <option value="2029">2029</option>
                        <option value="2030">2030</option>
                    </select>
                </div>
                <div class="inputBox">
                    <span>cvv</span>
                    <input type="text" maxlength="4" class="cvv-input">
                </div>
                <div class="inputBox">
                    <span>MƏBLƏĞ</span>
                    <input asp-for="@Model.Amount" type="text" maxlength="16" class="card-number-input">
                </div>
            </div>
            <input type="submit" value="BALANS ARTIR" class="submit-btn">
        </form>

    </div>
</div>


@section addcss {
    <style>
        .container-2 {
            padding: 20px 0px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-flow: column;
            padding-bottom: 60px;
            margin: 0;
            box-sizing: border-box;
            outline: none;
            border: none;
            text-decoration: none;
            text-transform: uppercase;
        }

            .container-2 form {
                background: #fff;
                border-radius: 15px;
                box-shadow: 0 10px 15px rgba(0,0,0,.1);
                padding: 20px;
                width: 600px;
                padding-top: 160px;
            }

                .container-2 form .inputBox {
                    margin-top: 20px;
                }

                    .container-2 form .inputBox span {
                        display: block;
                        color: #999;
                        padding-bottom: 5px;
                    }

                    .container-2 form .inputBox input,
                    .container-2 form .inputBox select {
                        width: 100%;
                        padding: 10px;
                        border-radius: 10px;
                        border: 1px solid rgba(0,0,0,.3);
                        color: #444;
                    }

                .container-2 form .flexbox {
                    display: flex;
                    gap: 15px;
                }

                    .container-2 form .flexbox .inputBox {
                        flex: 1 1 150px;
                    }

                .container-2 form .submit-btn {
                    width: 100%;
                    background: #171616;
                    margin-top: 20px;
                    padding: 10px;
                    font-size: 20px;
                    color: #fff;
                    border-radius: 10px;
                    outline:none;
                    cursor: pointer;
                    transition: .2s linear;
                }

                    .container-2 form .submit-btn:hover {
