@using MashinAl.Business.Modules.AccountModule.Queries.GetDealerProfileQuery
@model GetDealerProfileDto



<div class="profile-card">
    <div class="profile-photo">
        <img src="~/uploads/images/@Model.ImagePath" alt="Profile Photo">
    </div>
    <h2>@Model.DealerName</h2>
    <p>@Model.Description</p>
    <a href="https://www.google.com/maps?q=@Model.Address" class="btn btn-primary"><i class="fa-solid fa-location-dot"></i> @Model.Address</a>
    <span class="btn btn-primary">Balans: @Model.Balance ₼</span>
    <a asp-controller="Dashboard" asp-action="AddBalance"><span class="btn btn-success"><i class="fa-solid fa-money-bills"></i> Balans Artır</span></a>
    <a asp-controller="Dashboard" asp-action="EditProfile" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i> Məlumatları Dəyişmək</a>
</div>